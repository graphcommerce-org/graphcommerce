{
  "exclude": ["**/node_modules", "example", "dist", "**/.*/", "__tests__", "__mocks__"],
  "include": ["**/*.ts", "**/*.tsx"],
  "files": [
    "src/bin/codegen.ts",
    "src/bin/mesh.ts",
    "src/bin/graphcommerce.ts",
    "src/bin/is-monorepo.ts",
    "src/index.ts"
  ],
  "extends": "@graphcommerce/typescript-config-pwa/node.json",
  "compilerOptions": {
    "rootDir": "src",
    "noEmit": false,
    "outDir": "dist",
    "sourceMap": false,
    "noLib": false,
    "strict": true,
    "moduleResolution": "Bundler",
    "module": "ESNext"
  }
}
