#!/usr/bin/env sh

# Try to run pre-commit checks, but never block the commit
# If something fails, we'll fix it later

corepack yarn graphcommerce cleanup-interceptors 2>/dev/null || echo "⚠️  cleanup-interceptors failed, continuing anyway..."
npx pretty-quick --staged 2>/dev/null || echo "⚠️  pretty-quick failed, continuing anyway..."
git update-index --again 2>/dev/null || true

exit 0
