{
  "sources": [
    {
      "name": "GraphCMS",
      "handler": {
        "graphql": {
          "endpoint": "https://api-eu-central-1.graphcms.com/v2/ck7yo9viw00l901xqc4luccsb/master",
          "headers": {
            "Authorization": "${GRAPHCMS_BEARER}"
          },
          "cacheIntrospection": true
        }
      },
      "transforms": [
        {
          "filterSchema": ["Mutation.createContactForm"]
        }
      ]
    },
    {
      "name": "Magento GraphQL",
      "handler": {
        "graphql": {
          "endpoint": "https://segway.reachdigital.io/nl/graphql",
          "useGETForQueries": true,
          "cacheIntrospection": true,
          "schemaHeaders": {
            "Store": "segway_nl_nl",
            "Authorization": "{context.headers.authorization}"
          },
          "operationHeaders": {
            "Store": "segway_nl_nl",
            "Authorization": "{context.headers.authorization}"
          }
        }
      }
    }
  ]
}
