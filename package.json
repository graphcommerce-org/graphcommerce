{
  "name": "project-reachdigital.nl",
  "homepage": "https://soxbase.vercel.app",
  "version": "2.6.0",
  "private": true,
  "workspaces": [
    "packagesDev/*",
    "packages/*",
    "examples/*"
  ],
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "postinstall": "patch-package && patch-typed-document-node",
    "dev:api": "yarn pm2 start -s --name soxbase-api \"NODE_TLS_REJECT_UNAUTHORIZED=0 yarn workspace @reachdigital/soxbase-api dev \" && sleep 5",
    "dev:codegen": "yarn pm2 start -s --name codegen \"NODE_TLS_REJECT_UNAUTHORIZED=0 CHOKIDAR_USEPOLLING=0 yarn codegen-run -w \"",
    "dev:next": "yarn pm2 start -s --name soxbase \"NODE_TLS_REJECT_UNAUTHORIZED=0 yarn workspace @reachdigital/soxbase dev\"",
    "dev:log": "yarn pm2 logs",
    "dev": "yarn stop; yarn dev:api && yarn dev:next && yarn dev:codegen && yarn dev:log",
    "postdev": "yarn stop",
    "codegen-run": "NODE_TLS_REJECT_UNAUTHORIZED=0 node -r dotenv/config node_modules/.bin/graphql-codegen",
    "codegen-eslint": "eslint --fix --ignore-path .gitignore '**/*.gql.ts'",
    "codegen-prettier": "yarn prettier --ignore-path .gitignore --write '**/*.gql.ts'",
    "codegen": "yarn dev:api && yarn codegen-run; yarn codegen-eslint; yarn codegen-prettier",
    "build:soxbase-api": "yarn workspace @reachdigital/soxbase-api build && yarn start:soxbase-api",
    "build:soxbase": "yarn workspace @reachdigital/soxbase build",
    "build:lighthouse": "ts-node -O '{\"module\":\"commonjs\"}' --transpile-only lib/lighthouse.ts",
    "build": "yarn stop; yarn build:soxbase-api && yarn build:soxbase; yarn stop",
    "stop": "yarn pm2 delete all 2> /dev/null",
    "start:soxbase-api": "yarn pm2 start -s --name soxbase-api \"NODE_TLS_REJECT_UNAUTHORIZED=0 yarn workspace @reachdigital/soxbase-api start-local\" && sleep 2",
    "start:soxbase": "NODE_TLS_REJECT_UNAUTHORIZED=0 yarn workspace @reachdigital/soxbase start",
    "start": "yarn start:soxbase-api && yarn start:soxbase",
    "eslint:lint": "eslint --ignore-path .gitignore '**/{*.js,*.ts,*.tsx}'",
    "eslint:fix": "eslint --fix --ignore-path .gitignore '**/{*.js,*.ts,*.tsx}'",
    "prettier:fix": "yarn prettier --ignore-path .gitignore --write '**/*.{ts,tsx,css,html,json}'",
    "tsc:lint": "tsc --noEmit -p ."
  },
  "sideEffects": false,
  "prettier": "@reachdigital/prettier-config-pwa",
  "browserslist": [
    "extends @reachdigital/browserslist-config-pwa"
  ],
  "eslintConfig": {
    "extends": "@reachdigital/eslint-config-pwa",
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "dependencies": {
    "patch-package": "^6.2.2",
    "pm2": "^4.5.0",
    "postinstall-postinstall": "^2.1.0",
    "ts-node": "^9.0.0",
    "type-fest": "^0.18.1",
    "vercel": "^20.1.4"
  },
  "devDependencies": {
    "@babel/compat-data": "^7.12.5",
    "@babel/core": "^7.12.3",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@graphql-codegen/add": "^2.0.1",
    "@graphql-codegen/cli": "^1.19.0",
    "@graphql-codegen/fragment-matcher": "2.0.0",
    "@graphql-codegen/introspection": "1.18.0",
    "@graphql-codegen/schema-ast": "^1.17.8",
    "@graphql-codegen/typed-document-node": "^1.17.9",
    "@graphql-codegen/typescript": "^1.17.11",
    "@graphql-codegen/typescript-document-nodes": "1.17.8",
    "@graphql-codegen/typescript-operations": "1.17.9",
    "@graphql-typed-document-node/core": "^3.1.0",
    "@graphql-typed-document-node/patch-cli": "^3.0.8",
    "@reachdigital/browserslist-config-pwa": "0.1.0",
    "@reachdigital/create-package": "0.1.0",
    "@reachdigital/eslint-config-pwa": "0.1.0",
    "@reachdigital/graphql-codegen-near-operation-file": "0.1.0",
    "@reachdigital/graphql-codegen-relay-optimizer-plugin": "0.1.0",
    "@reachdigital/prettier-config-pwa": "0.1.0",
    "@semantic-release/git": "^9.0.0",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.1.2",
    "@types/node": "^14.14.7",
    "@types/react": "^16.9.55",
    "@types/resize-observer-browser": "^0.1.4",
    "@types/sharp": "^0.26.1",
    "babel-jest": "^26.6.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "eslint": "^7.12.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "next": "10.0.1",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "react-test-renderer": "^17.0.1",
    "semantic-release": "^17.2.3",
    "semantic-release-slack-bot": "^1.6.2",
    "ts-jest": "^26.4.3",
    "typescript": "^4.0.0"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "docs",
                "section": "Documentation"
              },
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Fixes"
              },
              {
                "type": "perf",
                "section": "Performance Improvements"
              },
              {
                "type": "build",
                "section": "Build"
              },
              {
                "type": "refactor",
                "section": "Refactor"
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github",
      [
        "semantic-release-slack-bot",
        {
          "notifyOnSuccess": true,
          "notifyOnFail": true,
          "markdownReleaseNotes": true,
          "onSuccessTemplate": {
            "blocks": [
              {
                "type": "section",
                "text": {
                  "type": "mrkdwn",
                  "text": "*New release for $repo_url ðŸŽ‰*\n$release_notes"
                }
              }
            ]
          }
        }
      ]
    ],
    "branches": [
      {
        "name": "master"
      }
    ]
  }
}
