{
  "name": "project-reachdigital.nl",
  "homepage": "https://soxbase.vercel.app",
  "version": "2.62.0",
  "private": true,
  "workspaces": [
    "docs",
    "packagesDev/*",
    "packages/*",
    "packages/*/example",
    "examples/*"
  ],
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "postinstall": "patch-package && patch-typed-document-node",
    "dev:api": "yarn pm2 start -s --name soxbase-api \"NODE_TLS_REJECT_UNAUTHORIZED=0 yarn workspace @reachdigital/soxbase-api dev \" && sleep 5",
    "dev:codegen": "yarn pm2 start -s --name codegen \"NODE_TLS_REJECT_UNAUTHORIZED=0 CHOKIDAR_USEPOLLING=0 yarn codegen-run -w \"",
    "dev:next": "yarn pm2 start -s --name soxbase \"NODE_TLS_REJECT_UNAUTHORIZED=0 yarn workspace @reachdigital/soxbase dev\"",
    "dev:log": "yarn pm2 logs",
    "dev:next-config": "yarn pm2 start -s --name next-config \"yarn workspace @reachdigital/next-config dev\" ",
    "dev:near-operation": "yarn pm2 start -s --name near-operation \"yarn workspace @reachdigital/graphql-codegen-near-operation-file dev\" ",
    "dev:relay-optimizer": "yarn pm2 start -s --name relay-optimizer \"yarn workspace @reachdigital/graphql-codegen-relay-optimizer-plugin dev\" ",
    "dev:docs": "yarn pm2 start -s --name soxbase-docs \"NODE_TLS_REJECT_UNAUTHORIZED=0 yarn workspace @reachdigital/pwa-docs dev\"",
    "dev": "yarn stop; yarn dev:next-config && yarn dev:api && yarn dev:next && yarn dev:codegen && yarn dev:docs && yarn dev:near-operation && yarn dev:relay-optimizer && yarn dev:log",
    "postdev": "yarn stop",
    "codegen-run": "NODE_TLS_REJECT_UNAUTHORIZED=0 node -r dotenv/config node_modules/.bin/graphql-codegen",
    "codegen-eslint": "eslint --fix --ignore-path .gitignore '**/*.gql.ts'",
    "codegen-prettier": "yarn prettier --ignore-path .gitignore --write '**/*.gql.ts'",
    "codegen": "yarn dev:api && yarn codegen-run; yarn codegen-eslint; yarn codegen-prettier; yarn stop",
    "build:next-config": "yarn workspace @reachdigital/next-config build",
    "build:soxbase-api": "yarn workspace @reachdigital/soxbase-api build && yarn start:soxbase-api",
    "build:soxbase": "yarn workspace @reachdigital/soxbase build",
    "build:lighthouse": "ts-node -O '{\"module\":\"commonjs\"}' --transpile-only lib/lighthouse.ts",
    "build": "yarn stop; yarn build:next-config; yarn build:soxbase-api && yarn build:soxbase; yarn stop",
    "build:analyze": "yarn stop; yarn build:soxbase-api && ANALYZE=true yarn build:soxbase; yarn stop",
    "stop": "yarn pm2 delete all 2> /dev/null",
    "start:soxbase-api": "yarn pm2 start -s --name soxbase-api \"NODE_TLS_REJECT_UNAUTHORIZED=0 yarn workspace @reachdigital/soxbase-api start-local\" && sleep 2",
    "start:soxbase": "NODE_TLS_REJECT_UNAUTHORIZED=0 yarn workspace @reachdigital/soxbase start",
    "start": "yarn start:soxbase-api && yarn start:soxbase",
    "eslint:lint": "eslint --ignore-path .gitignore '**/{*.js,*.ts,*.tsx}'",
    "eslint:fix": "eslint --fix --ignore-path .gitignore '**/{*.js,*.ts,*.tsx}'",
    "prettier:fix": "yarn prettier --ignore-path .gitignore --write '**/*.{ts,tsx,css,html,json}'",
    "tsc": "./node_modules/.bin/tsc",
    "tsc:lint": "yarn tsc --noEmit -p .",
    "config-to-env": "yarn ts-node -O '{\"module\":\"commonjs\"}' --transpile-only packages/magento-store/config-to-env/index.ts"
  },
  "sideEffects": false,
  "prettier": "@reachdigital/prettier-config-pwa",
  "browserslist": [
    "extends @reachdigital/browserslist-config-pwa"
  ],
  "eslintConfig": {
    "extends": "@reachdigital/eslint-config-pwa",
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "dependencies": {
    "patch-package": "^6.4.3",
    "pm2": "^4.5.6",
    "postinstall-postinstall": "^2.1.0",
    "ts-node": "^9.1.1",
    "type-fest": "^1.0.1",
    "vercel": "^21.3.1"
  },
  "devDependencies": {
    "@babel/compat-data": "^7.13.15",
    "@babel/core": "^7.13.15",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "^1.21.3",
    "@graphql-codegen/fragment-matcher": "2.0.1",
    "@graphql-codegen/introspection": "1.18.1",
    "@graphql-codegen/schema-ast": "^1.18.1",
    "@graphql-codegen/typed-document-node": "^1.18.4",
    "@graphql-codegen/typescript": "^1.21.0",
    "@graphql-codegen/typescript-document-nodes": "1.17.10",
    "@graphql-codegen/typescript-operations": "1.17.15",
    "@graphql-typed-document-node/core": "^3.1.0",
    "@graphql-typed-document-node/patch-cli": "^3.0.8",
    "@reachdigital/browserslist-config-pwa": "^0.1.0",
    "@reachdigital/eslint-config-pwa": "^0.1.0",
    "@reachdigital/graphql-codegen-near-operation-file": "^0.1.0",
    "@reachdigital/graphql-codegen-relay-optimizer-plugin": "^0.1.0",
    "@reachdigital/prettier-config-pwa": "^0.1.0",
    "@semantic-release/git": "^9.0.0",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.2",
    "@types/sharp": "^0.28.0",
    "babel-jest": "^26.6.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "eslint": "^7.24.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "next": "^10.1.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "react-test-renderer": "^17.0.2",
    "semantic-release": "^17.4.0",
    "semantic-release-slack-bot": "^2.1.0",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.4"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "docs",
                "section": "Documentation"
              },
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Fixes"
              },
              {
                "type": "perf",
                "section": "Performance Improvements"
              },
              {
                "type": "build",
                "section": "Build"
              },
              {
                "type": "refactor",
                "section": "Refactor"
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github",
      [
        "semantic-release-slack-bot",
        {
          "notifyOnSuccess": true,
          "notifyOnFail": true,
          "markdownReleaseNotes": true,
          "onSuccessTemplate": {
            "blocks": [
              {
                "type": "section",
                "text": {
                  "type": "mrkdwn",
                  "text": "*New release for $repo_url ðŸŽ‰*\n$release_notes"
                }
              }
            ]
          }
        }
      ]
    ],
    "branches": [
      {
        "name": "master"
      }
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
